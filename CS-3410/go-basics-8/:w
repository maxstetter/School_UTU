package birdwatcher

// TotalBirdCount return the total bird count by summing
// the individual day's counts.

import(
	"fmt"
)

func TotalBirdCount(birdsPerDay []int) int {
	total := 0

	for i := 0; i < len(birdsPerDay); i++{
		total += birdsPerDay[i]
	}

	return total
}

// BirdsInWeek returns the total bird count by summing
// only the items belonging to the given week.
func BirdsInWeek(birdsPerDay []int, week int) int {
	total := 0
	endofweek := 7 * week
	beginweek := endofweek - 7
	fmt.Println("week: ", week)
	fmt.Println("endofweek: ", endofweek)
	fmt.Println("beginweek: ", beginweek)

	for i := 0; i < 7; i++{
		total += birdsPerDay[beginweek]
		beginweek += 1
	}

	return total
}

// FixBirdCountLog returns the bird counts after correcting
// the bird counts for alternate days.
func FixBirdCountLog(birdsPerDay []int) []int {
	//addressing the first day
	fmt.Println("before first: ", birdsPerDay[0])
	birdsPerDay[0] = birdsPerDay[0] + 1
	fmt.Println("first day: ", birdsPerDay[0])
	for i := 2; i < len(birdsPerDay)-1;{
		birdsPerDay[i] = birdsPerDay[i] +1
		i += 2
	}
	return birdsPerDay
}
